<%- include('partials/metadata'); -%> <%- include('partials/header'); -%>
<div class="body-edit">
  <h1 class="login-title">EDITAR ITEM</h1>
  <div class="container-edit" >
    <form class="form-edit" method="POST" action="./<%= item.product_id %>?_method=PUT" enctype="multipart/form-data" style="width: 40%;">
			<div>
				<label for="category_id">Categoría:
					<select name="category_id" id="">
						<% if(item.category_id == 1){ %>
						<option value="1" selected>Figuras coleccionables</option>
						<option value="2">Llaveros</option>
						<option value="3">Remeras</option>
						<% } %>
						<% if(item.category_id == 2){ %>
						<option value="1" >Figuras coleccionables</option>
						<option value="2"selected>Llaveros</option>
						<option value="3">Remeras</option>
						<% } %>   
						<% if(item.category_id == 3){ %>
						<option value="1" >Figuras coleccionables</option>
						<option value="2">Llaveros</option>
						<option value="3"selected>Remeras</option>
						<% } %>                
					</select>
				</label>
				<label for="licence_id">Licencia:
					<select name="licence_id" required>
						<% if(item.licence_id == 1){ %>
						<option value="1"selected>HARRY POTTER</option>
						<option value="2" >POKEMON</option>
						<option value="3">STAR WARS</option>
						<% } %>
						<% if(item.licence_id == 2){ %>
						<option value="1">HARRY POTTER</option>
						<option value="2"selected >POKEMON</option>
						<option value="3">STAR WARS</option>
						<% } %>
						<% if(item.licence_id == 3){ %>
						<option value="1">HARRY POTTER</option>
						<option value="2" >POKEMON</option>
						<option value="3"selected>STAR WARS</option>
						<% } %>
					</select>
				</label>
			</div>
			<div >
				<label for="product_name" >Nombre del producto:</label>
				<input type="text" name="product_name" id="product_name" value="<%= item.product_name %>" style="width: 35%;" required>
			</div>
			<div>
				<textarea name="product_description" id="" cols="30" rows="10" placeholder="<%= item.product_description %>"></textarea>
			</div>
			<div class="deta">
				<label for="sku">SKU: <input type="text" name="sku" value="<%= item.sku %>" style="width: 70%;" required> </label>
				
				<label for="price">Precio: $<input type="text" name="price" style="width: 50%; text-align: center;" value="<%= item.price %>" required></label>

				<label for="stock">Stock: <input type="text" name="stock" value="<%= item.stock %>" style="width: 20%;" required></label>
			</div>
			<div >
				<label for="discount" style="width: 20%;">
					Descuento: <input type="text" name="discount" value="<%= item.discount %>" min="0" max="100" step="5" style="width: 30%; text-align: center;" required>%
				</label>
				<label for="">Cuotas:
					<select name="dues">
						<option value="">Sin cuotas</option>
						<option value="">3 Cuotas sin interés</option>
						<option value="">6 Cuotas sin interés</option>
					</select>
				</label>
			</div>
			<div>
				<label for="image_front">
					Imagenes: <input name="image_front" id="image_front" type="file" id="fileInput" accept="image/*,video/*" style="border: none;" multiple>
				</label>
			</div>
			<div style="width: 50%;">
					<div class="img-edit">
						<img src="../../public/img/<%= item.image_front %>" alt="">
						<p>Frente</p>
					</div>
					<div class="img-edit">
						<img src="../../public/img/<%= item.image_back %>" alt="">
						<p>Dorso</p>
					</div>
			</div>
			<div class="btn-edit">
				<input type="submit" value="Modificar Producto">
			</div>    
    </form>
  </div>
</div>

<%- include('partials/footer'); -%>
